<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/folder" />

    <EditText
        android:id="@+id/editTextDialogNewFolderName"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:paddingLeft="10dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewMsgFolderCreating"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextDialogNewFolderName"
        android:layout_below="@+id/editTextDialogNewFolderName"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/msg_folder_creating"
        android:textSize="15sp" 
        android:visibility="invisible"/>

</RelativeLayout>
